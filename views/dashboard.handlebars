<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{client_name}}!</h2>
  </div>
</div>

<div class="col-md-12 mt-4">
  <div class="row mt-4">
    <!-- creating a new blog post -->
    <h3>Create a New Post:</h3>

    <form class="form" id="new-blogpost-form">
      <div class="form-group">
        <label for="blogpost-name">Blog Title:</label>
        <input class="form-input" type="text" id="blogpost-name" name="blogpost-name" />
      </div>
      <div class="form-group">
        <label for="blogpost-cont">Blog Content:</label>
        <textarea class="form-input" id="blogpost-cont" name="blogpost-cont"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="create-button">+ New Post</button>
      </div>
    </form>
  </div>

    <div class="col-md-12 mt-4 blogpost-list">
      <div class="row mt-4">
      {{#if posts.length}}
      <h4 class="text-link">{{client.name}}'s Blog Posts!</h4>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>
          <a href="/post/{{post.id}}">{{post.title}}</a>
          </h4>
        </div>

          <div class="col-md-4">
              <a href="/edit-post/{{post.id}}" class="btn btn-light" id="edit-button" role="button">Edit</a>
              <button class="btn btn-primary delete-btn" data-id={{post.id}}>Delete</button>
			</div>
    </div>
    {{/each}}
  {{/if}}
</div>
</div>

<script src="./js/dashboard.js"></script>
