<div class="col-md-12 mb-4 p-0">
  <div class="row mt-4 blogpost-header">
    <div class="col-md-6">
      <h2 class="blogpost-name-not-link">{{title}}</h2>
      <p>{{description}}</p>
    </div>
    <div class="col-md-6 created-by">
      <p><span data-id={{id}} id="blogpost-id"></span>
        Created by
        {{client.name}}
        on
        {{format_date date_created}}</p>
    </div>
  </div>

  <div class="row input-group mb-3 p-0">
    <div class="row mt-4 input-group-prepend">
     <div class="col-md-12 mb-4">
      <div id="comment-container" style="flex">
        <div class="row mt-6 comment">
          <label for="comment-container">Add your comment:</label>
            <textarea class="form-control" type="text" id="comment-desc" rows="3"></textarea>
                <button class="btn btn-primary" id="comment-btn" data-id={{id}}>+Add Comment</button>
      </div>
    </div>
  </div>

    <div class="col-md-12 mb-4 p-0">
      <div class="row mt-4 blogpost-desc">
        <div class="col-md-12">
          {{#if comments}}
            {{#each comments}} 
            <h4 class="text-link fst-normal mb-0">
              By: {{client.name}} 
                <span class="text-primary ms-2 comment-desc">{{description}}</span>
                  on {{format_date date_created}}
                </h4>
            {{/each}}
          {{/if}}
        </div>
      </div>
    </div>

<script src="/js/comment.js"></script>