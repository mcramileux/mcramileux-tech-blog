<div class="col-md-12 mb-4">
  <div class="row mt-4 blogpost-header">
    <div class="col-md-6">
      <h2 class="blogpost-name-not-link">{{title}}</h2>
      <p>{{description}}</p>
    </div>
    <div class="col-md-6 created-by">
      <p><span data-id={{id}} id="blogpost-id"></span>
        Created by
        {{client_name}}
        on
        {{format_date date_created}}</p>
    </div>
  </div>

  <div class="text-center">
    <div id="comment-container" style="flex">
      <div class="comment">
    <label for="comment-container">Leave a Comment!</label>
    <input class="input" type="text" id="comment-desc"/>
   <button class="btn btn-primary" id="comment-btn" data-id={{id}}>Submit</button>
  </div>
</div>

    <div class="col-md-12 mb-4">
      <div class="row mt-4 blogpost-desc">
        <div class="col-md-12">
          {{#if comments}}
            {{#each comments}}
              <p> By {{client_name}},
                        {{description}} on
                          {{format_date date_created}}</p>
        </div>
      {{/each}}
    {{/if}}
      </div>
    </div>

<script src="/js/comment.js"></script>