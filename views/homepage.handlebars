{{#each posts as |post| }}
 <div class="col-md-12 mb-4 project">
    <div class="row mt-4 blogpost-header">
      <div class="col-md-6">
        <h2>
          <a class="blogpost-name-link" href="/api/post/{{post.id}}" id="comment">{{post.title}}</a>
        </h2>
      </div>
      <div class="col-md-6 created-on">
        <p>Created on
          {{!-- {{post.client_name}}
          on --}}
          {{format_date post.date_created}}</p>
      </div>
    </div>
    <div class="row mt-4 post-desc">
      <p>
        {{post.description}}
      </p>
    </div>
  </div>
{{/each}}