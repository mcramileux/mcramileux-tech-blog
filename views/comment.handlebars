<div class="col-md-12 mb-4">
  <div class="row mt-4 blogpost-header">
    <div class="col-md-6">
      {{!-- <h2 class="blogpost-name-not-link">{{name}}
      </h2> --}}
      <h3>{{post.title}}</h3>
    </div>
    <div class="col-md-6 created-by">
      {{!-- <p><span data-id={{id}} id="blogpost-id"></span> --}}
        Created by
        {{post.user.name}}
        on
        {{!-- {{format_date date_created}} --}}
        {{format_date post.createdAt}}</p>
    </div>
  </div>
  <div class="row mt-4 blogpost-desc">
    <p>{{post.contents}}</p>
  </div>
</div>

{{#if comments.length}}
  <div class="col-md-12">
    <div class="row mt-4 blogpost-header">
      <div class="col-md-6">
        <h3 class="blogpost-name-not-link">Current Comments:</h3>
      </div>
    </div>
  </div>

  {{#each comments as |comment|}}
    <div class="col-md-12 mb-4">
      <div class="row mt-4 blogpost-desc">
        <div class="col-md-12">
          <p>{{description}}</p>
          <p> -{{user.name}}, {{format_date post.createdAt}}</p>
        </div>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="col-md-12 mb-4 project">
  <form class="form new-comment-form">
    <div class="row mt-4 blogpost-header">
      <div class="col-md-12">
        <h3 class="blogpost-name-not-link">Comment:</h3>
      </div>
    </div>
    <div class="row mt-4 blogpost-desc">
      <textarea class="form-input" id="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" id="new-comment-form" class="align-center btn btn-primary">+ Add Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>